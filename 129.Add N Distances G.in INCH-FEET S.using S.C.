#include <stdio.h>

struct Distance {
    int feet;
    int inch;
};

int main() {
    struct Distance d[100], sum = {0, 0};
    int n;

    printf("Enter number of distances: ");
    scanf("%d", &n);

   
    for (int i = 0; i < n; i++) {
        printf("\nEnter distance %d:\n", i + 1);

     printf("Feet: ");
     scanf("%d", &d[i].feet);

    printf("Inch: ");
   scanf("%d", &d[i].inch);

      
          sum.feet += d[i].feet;
          sum.inch += d[i].inch;
    }

   
  
    sum.feet += sum.inch / 12;
    sum.inch = sum.inch % 12;

   
        printf("\n--- Total Distance ---\n");
        printf("Feet: %d\n", sum.feet);
        printf("Inch: %d\n", sum.inch);

    return 0;
}
